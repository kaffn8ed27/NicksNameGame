<resources>

    <style name="coworker_photo_label" parent="AppTheme">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="game_prompt" parent="AppTheme">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="coworker_photo" parent="AppTheme">
        <item name="android:layout_height">87dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:cropToPadding">false</item>
    </style>

</resources>

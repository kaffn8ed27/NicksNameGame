<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.GameActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/game_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Who is Ringo?" />

    <ImageView
        android:id="@+id/photo_1"
        android:onClick="onClick"
        style="@style/coworker_photo"
        app:layout_constraintBottom_toTopOf="@+id/photo_label_1"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:srcCompat="@drawable/john" />

    <TextView
        style="@style/coworker_photo_label"
        android:id="@+id/photo_label_1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/game_prompt"
        app:layout_constraintVertical_bias="0.2"
        android:text="@string/photo_label_1" />

    <ImageView
        android:id="@+id/photo_2"
        android:onClick="onClick"
        style="@style/coworker_photo"
        app:layout_constraintBottom_toTopOf="@+id/photo_label_2"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:srcCompat="@drawable/paul" />


    <TextView
        android:id="@+id/photo_label_2"
        style="@style/coworker_photo_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/game_prompt"
        app:layout_constraintVertical_bias="0.4"
        android:text="@string/photo_label_2"/>

    <ImageView
        android:id="@+id/photo_3"
        android:onClick="onClick"
        style="@style/coworker_photo"
        app:layout_constraintBottom_toTopOf="@+id/photo_label_3"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:srcCompat="@drawable/george" />


    <TextView
        android:id="@+id/photo_label_3"
        style="@style/coworker_photo_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/game_prompt"
        app:layout_constraintVertical_bias="0.6"
        android:text="@string/photo_label_3"/>

    <ImageView
        android:id="@+id/photo_4"
        android:onClick="onClick"
        style="@style/coworker_photo"
        app:layout_constraintBottom_toTopOf="@+id/photo_label_4"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:srcCompat="@drawable/ringo" />

    <TextView
        android:id="@+id/photo_label_4"
        style="@style/coworker_photo_label"
        android:text="@string/photo_label_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/game_prompt"
        app:layout_constraintVertical_bias="0.8"/>

    <ImageView
        android:id="@+id/photo_5"
        android:onClick="onClick"
        style="@style/coworker_photo"
        app:layout_constraintBottom_toTopOf="@+id/photo_label_5"
        app:layout_constraintEnd_toStartOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:srcCompat="@drawable/yoko" />

    <TextView
        android:id="@+id/photo_label_5"
        style="@style/coworker_photo_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/game_prompt"
        app:layout_constraintVertical_bias="1.0"
        android:text="@string/photo_label_5"/>


</androidx.constraintlayout.widget.ConstraintLayout>